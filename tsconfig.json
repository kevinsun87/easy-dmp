{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "isolatedModules": true,
      "resolveJsonModule": true,
      "sourceMap": true,
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true, 
      "jsx": "preserve",
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      },
      "types": ["element-plus/global"],
      "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue", "src/**/*.tsx", "types/**/*.d.ts", "types/**/*.ts", "vite.config.ts"],
    "exclude": ["node_modules", "dist"]
}
  